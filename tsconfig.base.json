{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022", "dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@cms-concept-3/source"],
    "baseUrl": ".",
    "paths": {
      "@common": ["libs/common/src/index.ts"],
      "@core": ["libs/core/src/index.ts"],
      "@model": ["libs/model/src/index.ts"]
    },
    "resolveJsonModule": true,
    "references": []
  }
}
